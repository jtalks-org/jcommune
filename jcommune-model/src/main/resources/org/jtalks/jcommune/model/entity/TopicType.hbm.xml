<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.jcommune.model.entity">
  <class name="TopicType" table="TOPIC_TYPE">
    <cache usage="nonstrict-read-write"/>
    <id name="id" column="ID" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property name="uuid" column="UUID" unique="true" not-null="true"/>
    <property name="name" column="NAME" unique="true" not-null="true"/>
  </class>

  <query name="getTopicTypeByName">
    <![CDATA[FROM TopicType topicType WHERE topicType.name = :name]]>
  </query>
</hibernate-mapping>