<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.jcommune.model.entity">
  <class name="org.jtalks.jcommune.model.entity.BranchReadedMarker" table="MARK_BRANCH_AS_READ_TIME">
    <cache usage="read-write"/>
    <id name="id" column="ID" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property name="uuid" column="UUID" unique="true" not-null="true"/>
    <many-to-one name="user" column="USER_ID" class="org.jtalks.jcommune.model.entity.JCUser"/>
    <many-to-one name="branch" column="BRANCH_ID" class="Branch"/>
    <property name="markTime" column="MARKED_AS_READ_TIME"
              type="org.joda.time.contrib.hibernate.PersistentDateTime" not-null="true"/>
  </class>

  <query name="getMarkByUserAndBranch">
    <![CDATA[FROM BranchReadedMarker m where m.branch = :branch and m.user = :user]]>
  </query>
</hibernate-mapping>