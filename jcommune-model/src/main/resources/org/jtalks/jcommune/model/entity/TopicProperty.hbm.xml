<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.jcommune.model.entity">
  <class name="TopicProperty" table="CUSTOM_TOPIC_PARAMETER">
    <cache usage="read-write"/>
    <id name="id" column="ID" unsaved-value="0">
      <generator class="native"/>
    </id>
    <property column="UUID" name="uuid" unique="true" not-null="true"/>
    <property column="NAME" name="name" not-null="true"/>
    <property column="TYPE" name="type" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">org.jtalks.jcommune.model.entity.PropertyType</param>
        <!-- varchar -->
        <param name="type">12</param>
      </type>
    </property>
    <property column="VALUE" name="value" not-null="true"/>
    <many-to-one name="topic" column="TOPIC_ID" not-null="true"
                 foreign-key="FC_TOPIC_PARAM" class="Topic"/>
  </class>
</hibernate-mapping>