<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.jtalks.jcommune.model.entity">
    <class name="TopicDraft" table="TOPIC_DRAFT">
        <cache usage="read-write"/>
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="uuid" column="UUID" not-null="true"/>
        <property name="title" column="TITLE" type="string" not-null="false"/>
        <property name="content" column="CONTENT" type="text" not-null="false"/>
        <property name="pollTitle" column="POLL_TITLE" type="string" not-null="false"/>
        <property name="pollItemsValue" column="POLL_ITEMS_VALUE" type="text" not-null="false"/>

        <property name="lastSaved" column="LAST_SAVED" type="org.joda.time.contrib.hibernate.PersistentDateTime"
                  not-null="true"/>

        <many-to-one name="topicStarter" column="TOPIC_STARTER_ID" class="org.jtalks.jcommune.model.entity.JCUser"
                     not-null="true" foreign-key="FK_USER_TOPIC_DRAFT"
                     lazy="false"/>
        <!-- We don't use lazy loading here, because in most cases of use TopicDraft its author also required -->
    </class>

    <query name="getForUser">
        <![CDATA[FROM TopicDraft as dt
            WHERE dt.topicStarter = :user]]>
    </query>

    <query name="deleteByUser">
        <![CDATA[DELETE FROM TopicDraft as dt
            WHERE dt.topicStarter = :user]]>
    </query>

</hibernate-mapping>