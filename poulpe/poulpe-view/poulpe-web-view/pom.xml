<?xml version="1.0"?>
<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>poulpe-view</artifactId>
    <groupId>org.jtalks.poulpe</groupId>
    <version>0.4-SNAPSHOT</version>
  </parent>
  <artifactId>poulpe-web-view</artifactId>
  <packaging>war</packaging>
  <name>${project.artifactId}</name>
  <url>www.jtalks.org</url>
  <description>
    This module contains web resources (images, js, html, jsp, etc) and other
    web related resources, like web.xml.
  </description>
  <dependencies>
    <dependency>
      <groupId>org.jtalks.poulpe</groupId>
      <artifactId>poulpe-web-controller</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-web</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>jstl</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>jsp-api</artifactId>
    </dependency>         
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.cargo</groupId>
        <artifactId>cargo-maven2-plugin</artifactId>
        <version>1.0.2</version>
        <configuration>
          <wait>true</wait>
          <container>
            <containerId>tomcat6x</containerId>
            <type>installed</type>
            <home>${env.CATALINA_HOME}</home>
          </container>
          <configuration>
            <type>existing</type>
            <home>${env.CATALINA_HOME}</home>
          </configuration>
          <deployer>
            <type>installed</type>
            <deployables>
              <deployable>
                <groupId>org.jtalks.poulpe</groupId>
                <artifactId>poulpe-web-view</artifactId>
                <type>war</type>
              </deployable>
            </deployables>
          </deployer>
        </configuration>
      </plugin>
    </plugins>

    <finalName>poulpe</finalName>
  </build>

</project>
